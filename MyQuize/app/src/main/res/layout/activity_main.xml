<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="#B3E6E2">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="WELCOME TO THE QUIZ "
    android:textColor="#2E3D8A"
    android:textSize="33sp"
    android:textStyle="bold"
    android:layout_marginTop="4dp"
    android:paddingLeft="15dp"
    android:background="#89CFF0" />
<TextView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:text="ARE YOU READY !"
    android:layout_marginTop="50dp"
    android:textSize="40dp"
    android:paddingLeft="35dp"
    android:textStyle="bold"
    android:textColor="#ED3921"
    android:background="#D4D43A"
    android:id="@+id/textView" />
    <TextView
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:text=" 1) What is size of Float  datatype ?"
        android:textSize="30dp"
        android:paddingLeft="15dp"
        android:textStyle="italic"
        android:textColor="#FCA9FF"
        android:background="#8E0172"
        android:layout_marginTop="107dp"
        />
    <RadioButton
        android:layout_width="185dp"
        android:layout_height="45dp"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="5dp"
        android:text="1 Byte"
        android:textSize="25dp"
        android:background="#8D8BDA"
        android:id="@+id/one"
         />
    <RadioButton
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="195dp"
        android:text="2 Byte"
        android:textSize="25dp"
        android:background="#8D8BDA"
        android:id="@+id/two"
        />
    <RadioButton
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="195dp"
        android:text="4 Byte"
        android:textSize="25dp"
        android:background="#8D8BDA"
        android:id="@+id/four"
        />
    <RadioButton
        android:layout_width="185dp"
        android:layout_height="45dp"
        android:text="3 Byte"
        android:textSize="25dp"
        android:background="#8D8BDA"
        android:id="@+id/three"
        android:layout_alignBottom="@+id/four"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignTop="@+id/four" />
    <TextView
        android:paddingLeft="130dp"
        android:paddingTop="15dp"
        android:text="Next  >>>"
        android:textColor="#880207"
        android:textSize="30sp"
        android:layout_height="60dp"
        android:layout_width="347dp"
        android:layout_marginTop="10dp"
        android:background="#D6CD24"

        android:onClick="next"
        android:id="@+id/textView2"
        android:layout_below="@+id/four"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />
    <TextView
        android:paddingLeft="100dp"
        android:paddingTop="15dp"
        android:layout_height="65dp"
        android:text="--  submit --"
        android:textSize="30sp"
        android:layout_width="347dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="360dp"
        android:background="#5AC454"
        android:textColor="#255F29"
        android:clickable="true"
        android:onClick="pri"
        android:id="@+id/textView3" />
    <TextView
        android:paddingLeft="65dp"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textStyle="bold"
        android:text="ALL THE BEST    :-)"
        android:background="#5A0477"
        android:textColor="#D079FC"
        android:textSize="30dp"
        android:layout_marginTop="430dp"
        android:clickable="true"
        android:onClick="submit"
        />
</RelativeLayout>
